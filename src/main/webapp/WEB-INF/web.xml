<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
           http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

    <display-name>Archetype Created Web Application</display-name>

    <!--<welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>-->

    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>tstore.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>

    <!--Client's servlets-->

    <servlet>
        <servlet-name>Basket</servlet-name>
        <servlet-class>tstore.servlets.BasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Basket</servlet-name>
        <url-pattern>/basket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserProfile</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderHistory</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistory</servlet-name>
        <url-pattern>/orderhistory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Payment</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Payment</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>

    <!--Admin's servlets-->
    <servlet>
        <servlet-name>OrderList</servlet-name>
        <servlet-class>tstore.servlets.AdminOrderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderList</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProductToBasket</servlet-name>
        <servlet-class>tstore.servlets.AddToBasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductToBasket</servlet-name>
        <url-pattern>/addtobasket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateOrder</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOrder</servlet-name>
        <url-pattern>/updateorder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Statistic</servlet-name>
        <servlet-class>tstore.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Statistic</servlet-name>
        <url-pattern>/statistic</url-pattern>
    </servlet-mapping>

    <!--login page-->

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>tstore.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--Filter-->
    <filter>
        <filter-name>UserIdentification</filter-name>
        <filter-class>tstore.servlets.UserIdentificationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserIdentification</filter-name>
        <url-pattern>/*</url-pattern>
        <!--<servlet-name>Product</servlet-name>-->
    </filter-mapping>


</web-app>